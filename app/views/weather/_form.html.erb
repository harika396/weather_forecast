<%= form_with(url: search_path, method: 'get', local: true) do %>
	<div class="form-group">
	  <%= text_field_tag :query, nil, placeholder: "Enter the address", id: :autocomplete_address, class: "form-control mr-sm-2" %>
	</div>

	<%= hidden_field_tag :locality %>
	<%= hidden_field_tag :administrative_area_level_1 %>
	<%= hidden_field_tag :country %>
	<%= hidden_field_tag :postal_code %>

  <%= button_tag 'Search', id: "location-submit", class:'btn btn-primary btn-block' %>
<% end %>